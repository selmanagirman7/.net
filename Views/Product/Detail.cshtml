                                                        <img src="//st.myideasoft.com/idea/gl/54/myassets/products/738/1409054147_min.jpg?revision=1635233131" alt="Dekor Hassan Sıva Malası Plastik Saplı Yay Çeliği 22 Cm (372)">
                                                        </a>
                                                        </div>*@

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-xl-5">
                                    <div class="product-right">
                                        <div class="product-title">
                                            <h1>@item.Name</h1>
                                        </div>
                                        <div class="product-title">
                                            <h1>@item.Iskonto % İskonto (İskonto Hariç Tutar)</h1>
                                        </div>
                                        <div class="product-price-container">
                                            <div class="product-price">
