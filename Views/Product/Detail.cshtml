@model IEnumerable<Entity.Vega>
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var item in Model)
{

    <section class="page__title p-relative d-flex align-items-center" data-background="../../banner-celebi2.jpg">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="page__title-inner text-center">
                        <h1>@item.Name</h1>
                        <div class="page__title-breadcrumb">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
<br />
<br />
<br />

<main style="background:#fdfdfd;" id="main ">
    <div class="container ">
        <div class="row">
            <section class="detail-bg col-12">
                @foreach (var item in Model)
                {

                    <div id="product-detail-container">
                        <div class="product-area-top">
                            <div class="row no-gutters mb-4 mb-md-5">
                                <div class="col-lg-6  mb-4 mb-lg-0">
                                    <div class="product-left">
                                        <div class="product-image">
                                            <div class="showcase-badges">
                                            </div>
                                            <div id="product-primary-image">
                                                <img id="primary-image" alt="@item.Name" src="~/urunler/@item.ImageUrl" data-zoom-image="//st2.myideasoft.com/idea/gl/54/myassets/products/738/1409054147.jpg?revision=1635233131">
                                            </div>


                                        </div>
                                        <div class="product-thumb-image-container">
                                            <div id="product-thumb-image" class="slick-initialized slick-slider">
                                                <div class="slick-list draggable">
